{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "RRIV: Build App Binary Crate",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "-p=app"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
        },
        {
            "label": "RRIV: Build Release App Binary Crate",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--release",
                "-p=app"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
        },
         {
            "label": "RRIV: Clean",
            "type": "shell",
            "command": "cargo",
            "args": [
                "clean",
                "--release",
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
        },
        {
            "label": "RRIV: Build Release",
            "dependsOn": [
                "RRIV: Clean",
                "RRIV: Build Release App Binary Crate"
            ]
        },
        {
            "label": "RRIV: Build Board Crate",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "-p=rriv_board_0_4_2"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
        },
    ]
}